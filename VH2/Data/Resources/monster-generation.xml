<?xml version="1.0" encoding="utf-8" ?>
<monster-generation>
  <level name="Town">
    <!--<generator mincount="8" maxcount="10" xpath="//monster[@id='moth']"/>-->
    <generator mincount="8" maxcount="10" xpath="//monster[@race='human']"/>
    <generator mincount="2" maxcount="4" xpath="//monster[@race='animal' and @danger&lt;=1]"/>
  </level>
  <level name="D[0-9]+">
    <generator mincount="5" maxcount="15" xpath="//monster[@danger&lt;=$danger]"/>
  </level>
</monster-generation>
